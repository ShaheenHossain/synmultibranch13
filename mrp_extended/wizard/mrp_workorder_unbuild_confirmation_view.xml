<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_workorder_unbuild_confirmation_form_view" model="ir.ui.view">
        <field name="name">mrp.workorder.unbuild.confirmation.form.view</field>
        <field name="model">mrp.workorder.unbuild.confirmation</field>
        <field name="arch" type="xml">
            <form string="Unbuild Confirmation">
                <field name="workorder_id" invisible="1"/>
                <div class="oe_clear">
                    <div role="alert" class="alert alert-warning">
                        <span>
                            You are about to send the <b><field name="product_name" class="oe_inline"/></b> <span attrs="{'invisible': [('finished_lot_name', '=', '')]}">of SN <b><field name="finished_lot_name" class="oe_inline"/></b></span> to the Unbuild. Please confirm.
                        </span>
                    </div>
                </div>
                <footer>
                    <button name="action_confirm" type="object" string="Confirm" class="oe_highlight"/>
                    <button string="Cancel" special="cancel" class="btn btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="mrp_workorder_unbuild_confirmation_action" model="ir.actions.act_window">
        <field name="name">Unbuild Confirmation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.workorder.unbuild.confirmation</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
    </record>
</odoo>
