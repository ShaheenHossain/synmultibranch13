<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_mrp_partial_close_confirmation_form" model="ir.ui.view">
        <field name="name">mrp_partial_close.confirmation.form</field>
        <field name="model">mrp_partial_close.confirmation</field>
        <field name="arch" type="xml">
            <form string="Confirm Close">
                <field name="mo_id" invisible="1"/>
                <div class="alert alert-danger h5" role="alert">
                    <span class="fa fa-exclamation-triangle mr-1"/> <field name="remain_qty" class="mr-1"/> <field name="uom_id" options="{'no_open':True, 'no_create':True}"/> are still need to be produce, Are you sure want to close this manufacturing order?
                </div>

                <field name="reason" nolabel="1" placeholder="Reason for partial close(optional)"/>
                <footer>
                    <button string="Force Close" class="btn btn-primary" type="object" name="confirm_close"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
         </field>
    </record>
</odoo>
