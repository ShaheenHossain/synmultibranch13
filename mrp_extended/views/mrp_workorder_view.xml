<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="mrp_workorder_form_ext_test">
        <field name="name">mrp.workorder.form.ext.test</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.mrp_production_workorder_form_view_inherit"/>
        <field name="arch" type="xml">
            <field name="qty_production" position="before">
                <field name="is_reworkorder" invisible="1"/>
            </field>
            <field name="qty_production" position="attributes">
                <attribute name="attrs">{'invisible': [('is_reworkorder', '!=', False)]}</attribute>
            </field>
            <field name="qty_production" position="after">
                <field name="qty_rework" attrs="{'invisible': [('is_reworkorder', '=', False)]}"/>
            </field>
            <xpath expr="//page[@name='workorder_page_misc']" position="before">
                <page name="test_result" string="Test Result" attrs="{'invisible': [('last_test_import_date', '=', False)]}">
                    <group>
                        <group>
                            <field name="last_test_import_date"/>
                        </group>
                        <group>
                            <field name="last_test_import_user"/>
                        </group>
                    </group>
                    <group>
                        <field name="excel_test_result_ids" nolabel="1">
                            <tree decoration-success="result == 'pass'" decoration-danger="result == 'fail'" create="0" delete="0">
                                <field name="quality_check_id"/>
                                <field name="component_lot_ref"/>
                                <field name="finish_lot_ref"/>
                                <field name="sta"/>
                                <field name="crp"/>
                                <field name="votage_test"/>
                                <field name="result"/>
                                <field name="create_date"/>
                                <field name="user_id"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
         </field>
    </record>

    <record id="mrp_workorder_view_form_inherit_workorder_mrp_extended" model="ir.ui.view">
        <field name="name">mrp.workorder.view.form.inherit.workorder1</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp_workorder.mrp_workorder_view_form_inherit_workorder"/>
        <field name="arch" type="xml">
            <button name="open_tablet_view" position="after">
                <field name="reworkorder_id" invisible="1"/>
                <field name="is_reworkorder" invisible="1"/>
                <field name="has_rework" invisible="1"/>
                <field name="test_type" invisible="1"/>
                <button name="%(mrp_extended.mrp_workorder_import_xls_result_action)d" type="action" icon="fa-file-excel-o" string="Import Test Result" class="btn-success" attrs="{'invisible': ['|', '|', '|', '|', ('test_type', '!=', 'passfail'), ('product_tracking', '!=', 'serial'), ('has_rework', '!=', False), ('is_reworkorder', '=', True), ('state', 'in', ('cancel', 'done'))]}" help="Import test result excel sheet."/>
                <button name="button_show_reworkorder" type="object" string="Rework Order" icon="fa-bars" class="btn-primary" attrs="{'invisible': ['|', ('is_reworkorder', '!=', False), ('reworkorder_id', '=', False)]}"/>
            </button>
            <xpath expr="//page//field[@name='check_ids']" position="attributes">
                <attribute name="attrs">{'invisible': [('is_reworkorder', '!=', False)]}</attribute>
            </xpath>
            <xpath expr="//page//field[@name='check_ids']" position="after">
                <field name="finished_reworkorder_line_ids" attrs="{'invisible': [('is_reworkorder', '!=', True)]}" options="{'no_open': True, 'clickable': 0}" readonly="1" nolabel="1">
                    <tree>
                        <field name="write_date" string="Date"/>
                        <field name="write_uid" string="Operator"/>
                        <field name="lot_id" string="Finished Lot/Serial Number"/>
                        <field name="rework_title"/>
                        <field name="rework_result"/>
                    </tree>
                </field>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="mrp_workorder_view_form_tablet_ext">
        <field name="name">mrp.workorder.rework.ext</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp_workorder.mrp_workorder_view_form_tablet"/>
        <field name="arch" type="xml">
            <field name="finished_workorder_line_ids" position="after">
                <field name="has_rework" invisible="1"/>
                <field name="has_rebuilt" invisible="1"/>
                <field name="is_reworkorder" invisible="1"/>
                <field name="test_type" invisible="1"/>
                <field name="reworkorder_id" invisible="1"/>
                <field name="finished_reworkorder_line_ids" invisible="1"/>
                <field name="finished_workorder_line_ids" invisible="1"/>
                <field name="to_reworkorder_line_ids" invisible="1"/>
            </field>
            <xpath expr="//div[hasclass('o_workorder_actions')]//button[@name='action_menu']" position="after">
                <button name="action_info" type="object" class="btn-warning o_workorder_icon_btn" icon="fa-info" attrs="{'invisible': ['|', ('is_reworkorder', '!=', False), ('finished_workorder_line_ids', '=', []), ('to_reworkorder_line_ids', '=', [])]}"/>
                <button name="action_info" type="object" class="btn-warning o_workorder_icon_btn" icon="fa-info" attrs="{'invisible': ['|', ('is_reworkorder', '!=', True), ('finished_reworkorder_line_ids', '=', [])]}"/>
            </xpath>
            <button name="action_next" position="before">
                <button name="%(mrp_extended.mrp_workorder_import_xls_result_action)d" type="action" icon="fa-file-excel-o" class="btn-success" attrs="{'invisible': ['|', '|', '|', '|', ('test_type', '!=', 'passfail'), ('product_tracking', '!=', 'serial'), ('has_rework', '!=', False), ('is_reworkorder', '=', True), ('state', 'in', ('cancel', 'done'))]}" help="Import test result excel sheet."/>
                <button name="%(mrp_extended.mrp_workorder_rework_confirmation_action)d" type="action" string="Send to Rework" icon="fa-repeat" class="btn-primary" attrs="{'invisible': ['|', '|', '|', '|', ('is_first_step', '=', False), ('product_tracking', '!=', 'serial'), ('has_rework', '!=', False), ('is_reworkorder', '!=', False), ('state', 'in', ('cancel', 'done'))]}"/><!-- barcode_trigger="cloWO"-->
            </button>
            <button name="record_production" position="attributes">
                <attribute name="string">Validate</attribute>
            </button>
            <field name="finished_lot_id" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
                <attribute name="context">{'default_product_id': product_id, 'default_company_id': company_id, 'workorder_id': active_id, 'is_finished_lot_id': True}</attribute>
            </field>
            <xpath expr="//div[hasclass('o_workorder_lot')]//field[@name='lot_id']" position="attributes">
                <attribute name="context">{'default_product_id': component_id, 'default_company_id': company_id, 'active_mo_id': test_type == 'register_consumed_materials' and production_id or False, 'workorder_id': active_id}</attribute>
                <attribute name="options">{'no_create': True}</attribute>
            </xpath>
            <xpath expr="//div[hasclass('workorder_bar_center')]//button[@name='action_generate_serial']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('finished_lot_id', '!=', False), ('product_tracking', '=', 'serial')]}</attribute>
            </xpath>
            <xpath expr="//div[hasclass('workorder_bar_center')]//div" position="inside">
                <div style="display: inline-block;" attrs="{'invisible': ['|', '|', ('is_reworkorder', '!=', False), ('component_tracking', '!=', False), ('has_rework', '!=', True)]}">
                    <h2><span class="badge badge-pill badge-danger">In Rework</span></h2>
                </div>
                <div style="display: inline-block;" attrs="{'invisible': ['|', '|', ('is_reworkorder', '!=', False), ('component_tracking', '!=', False), ('has_rebuilt', '!=', True)]}">
                    <h3><span class="badge badge-pill badge-danger">Need to Rebuilt</span></h3>
                </div>
            </xpath>
            <xpath expr="//div[hasclass('o_workorder_field')]" position="after">
                <div attrs="{'invisible': [('has_rework', '!=', True)]}">
                    <h2><span class="badge badge-pill badge-danger">In Rework</span></h2>
                </div>
                <div style="display: inline-block;" attrs="{'invisible': [('has_rebuilt', '!=', True)]}">
                    <h3><span class="badge badge-pill badge-danger">Need to Rebuilt</span></h3>
                </div>
            </xpath>
            <field name="finished_product_check_ids" position="replace"/>
            <xpath expr="//div[hasclass('o_workorder_data')]" position="inside">
                <field name="previously_finished_check_ids" attrs="{'invisible': [('previously_finished_check_ids', '=', [])]}">
                    <tree decoration-success="quality_state == 'pass'" decoration-danger="quality_state == 'fail'" default_order="control_date">
                        <field name="quality_state" invisible="1"/>
                        <field name="test_type" invisible="1"/>
                        <field name="control_date" string="Date"/>
                        <field name="workcenter_id" string="Operation"/>
                        <field name="user_id" string="Operator"/>
                        <field name="title"/>
                        <field name="result"/>
                        <field name="quality_state_for_summary" string="Status"/>
                    </tree>
                </field>
            </xpath>
         </field>
    </record>

    <record model="ir.ui.view" id="mrp_workorder_view_form_tablet_menu_inherit">
        <field name="name">mrp.workorder.view.form.tablet.menu.inherit</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp_workorder.mrp_workorder_view_form_tablet_menu"/>
        <field name="arch" type="xml">
            <!-- <div id="workorder_maintenance_button" position="before">
                <div class="col-6" id="workorder_unbuild_button">
                    <button name="button_unbuild" type="object" class="btn-warning btn-block btn btn-lg" string="Unbuild"/>
                </div>
            </div> -->
            <div id="workorder_maintenance_button" position="inside">
                <field name="is_reworkorder" invisible="1"/>
                <button name="%(mrp_workorder_unbuild_confirmation_action)d" type="action" class="btn-warning btn-block btn btn-lg" attrs="{'invisible': [('is_reworkorder', '=', False)]}" string="Unbuild"/>
            </div>
        </field>
    </record>

    <record model="ir.ui.view" id="mrp_workorder_view_form_tablet_inherit_quality_ext">
        <field name="name">mrp.workorder.form.ext.test1</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="quality_mrp_workorder.mrp_workorder_view_form_tablet_inherit_quality"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='do_pass']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('has_rework', '!=', False), ('test_type', '!=', 'passfail')]}</attribute>
            </xpath>
            <xpath expr="//button[@name='do_fail']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('has_rework', '!=', False), ('test_type', '!=', 'passfail')]}</attribute>
            </xpath>
        </field>
    </record>

    <record id="mrp_workorder_view_form_tablet_info" model="ir.ui.view">
        <field name="name">mrp.workorder.view.form.tablet.info</field>
        <field name="model">mrp.workorder</field>
        <field name="arch" type="xml">
            <form string="Workorder Actions">
                <field name="is_reworkorder" invisible="1"/>
                <field name="has_rebuilt" invisible="1"/>
                <group string="Finished Rework" attrs="{'invisible': ['|', ('is_reworkorder', '=', False), ('finished_reworkorder_line_ids', '=', [])]}">
                    <field name="finished_reworkorder_line_ids" options="{'no_open': True, 'clickable': 0}" readonly="1" nolabel="1">
                        <tree decoration-success="move_line_id == False" decoration-danger="move_line_id != False">
                            <field name="product_id"/>
                            <field name="product_uom_id" groups="uom.group_uom" readonly="1"/>
                            <field name="product_tracking" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="lot_id" readonly="1"/>
                            <field name="qty_to_consume" readonly="1" string="To Rework"/>
                            <field name="qty_done" string="Reworked"/>
                            <field name="product_uom_id" invisible="1"/>
                            <field name="move_line_id" invisible="1"/>
                        </tree>
                    </field>
                </group>
                <group string="Finished Products" attrs="{'invisible': ['|', ('is_reworkorder', '!=', False), ('finished_workorder_line_ids', '=', [])]}">
                    <field name="finished_workorder_line_ids" options="{'no_open': True, 'clickable': 0}" readonly="1" nolabel="1">
                        <tree>
                            <field name="product_id"/>
                            <field name="product_uom_id" groups="uom.group_uom" readonly="1"/>
                            <field name="product_tracking" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="lot_id" attrs="{'readonly': [('product_tracking', '=', 'none')]}" context="{'default_company_id': company_id, 'default_product_id': product_id}"/>
                            <field name="qty_to_consume" readonly="1" string="To Produce" force_save="1"/>
                            <field name="qty_done" string="Produced"/>
                            <field name="product_uom_id" invisible="1"/>
                        </tree>
                    </field>
                </group>
                <group string="Rebuilt Component" attrs="{'invisible': ['|', ('has_rebuilt', '!=', False), ('rebuilt_component_ids', '=', [])]}">
                    <field name="rebuilt_component_ids" options="{'no_open': True, 'clickable': 0}" readonly="1" nolabel="1">
                        <tree decoration-success="status == 'done'" decoration-warning="status == 'pending'">
                            <field name="component_lot_id"/>
                            <field name="finished_lot_ids" widget="many2many_tags"/>
                            <field name="workorder_id" invisible="1"/>
                            <field name="status"/>
                        </tree>
                        <form string="Rebuilt Component">
                            <header>
                                <field name="status" widget="statusbar" statusbar_visible="pending,done"/>
                            </header>
                            <sheet>
                                <group>
                                    <group>
                                        <field name="component_lot_id"/>
                                    </group>
                                    <group>
                                        <field name="finished_lot_ids" widget="many2many_tags"/>
                                    </group>
                                </group>
                            </sheet>
                        </form>
                    </field>
                </group>
                <group string="Rework" attrs="{'invisible': ['|', ('is_reworkorder', '!=', False), ('to_reworkorder_line_ids', '=', [])]}">
                    <field name="to_reworkorder_line_ids" options="{'no_open': True, 'clickable': 0}" readonly="1" nolabel="1">
                        <tree decoration-success="move_line_id == False" decoration-danger="move_line_id != False">
                            <field name="product_id"/>
                            <field name="product_uom_id" groups="uom.group_uom" readonly="1"/>
                            <field name="product_tracking" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="lot_id" readonly="1"/>
                            <field name="qty_to_consume" readonly="1" string="To Rework"/>
                            <field name="rework_state" string="Status" readonly="1"/>
                            <!-- <field name="qty_done" string="Reworked"/> -->
                            <field name="product_uom_id" invisible="1"/>
                            <field name="move_line_id" invisible="1"/>
                        </tree>
                    </field>
                </group>
                <footer></footer>
            </form>
        </field>
    </record>
</odoo>