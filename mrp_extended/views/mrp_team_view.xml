<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mrp_team_search_view" model="ir.ui.view">
        <field name="name">mrp.team.search.view</field>
        <field name="model">mrp.team</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Name" filter_domain="[('name', 'ilike', self)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="mrp_team_tree_view" model="ir.ui.view">
        <field name="name">mrp.team.tree.view</field>
        <field name="model">mrp.team</field>
        <field name="arch" type="xml">
            <tree string="Manufacturing Team">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="mrp_team_form_view" model="ir.ui.view">
        <field name="name">mrp.team.form.view</field>
        <field name="model">mrp.team</field>
        <field name="arch" type="xml">
            <form string="Manufacturing Team">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Manufacturing Team"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                    <notebook>
                        <page name="mrp_users" string="Team Members">
                            <field name="user_ids" widget="many2many" options="{'not_delete': True}">
                                <kanban quick_create="false" create="true" delete="true">
                                    <field name="id"/>
                                    <field name="name"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_global_click" style="max-width: 200px">
                                                <div class="o_kanban_record_top">
                                                    <img t-att-src="kanban_image('res.users', 'image_128', record.id.raw_value)" class="oe_avatar oe_kanban_avatar_smallbox o_image_40_cover mb0" alt="Avatar"/>
                                                    <div class="o_kanban_record_headings ml8">
                                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="mrp_team_action" model="ir.actions.act_window">
        <field name="name">Manufacturing Team</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.team</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem action="mrp_team_action" id="mrp_team_menu"
        parent="mrp.menu_mrp_configuration" string="Manufacturing Team" sequence="11" groups="mrp.group_mrp_manager"/>
</odoo>
