<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <!-- MRP BOM Multi Branch Rule  -->
    <record id="mrp_bom_branch_user_rule" model="ir.rule">
        <field name="name">Mrp bom multi-Branch User</field>
        <field name="model_id" ref="mrp.model_mrp_bom"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('branch_id','=',False),('branch_id','in',[branch.id for branch in user.branch_ids])]</field>
    </record>

