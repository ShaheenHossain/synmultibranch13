<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record model="ir.rule" id="mrp_workorder_team_rule_administrator">
            <field name="name">MRP Workcenter: Manager</field>
            <field name="model_id" ref="mrp.model_mrp_workcenter"/>
            <field name="domain_force">['|', ('company_id', 'in', company_ids), ('company_id', '=', False)]</field>
            <field name="groups" eval="[(4, ref('mrp.group_mrp_manager'))]"/>
        </record>
        <record model="ir.rule" id="mrp_workorder_team_rule_user">
            <field name="name">MRP Workcenter: Team Members</field>
            <field name="model_id" ref="mrp.model_mrp_workcenter"/>
            <field name="domain_force">['|', ('team_id', '=', False), ('team_id.user_ids', 'child_of', [user.id])]</field>
            <field name="groups" eval="[(4, ref('mrp.group_mrp_user'))]"/>
        </record>
    </data>
</odoo>