<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_production_lot_form_inherit_mrp_extended" model="ir.ui.view">
        <field name="name">stock.production.lot.view.form.inherit.mrp_extended</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <div class="oe_button_box" position="inside">
                <button class="oe_stat_button" name="action_open_finished_product" icon="fa-cubes" attrs="{'invisible':[('qty_finished_product', '=', 0)]}" type="object">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="qty_finished_product" widget="statinfo" nolabel="1" class="mr4"/>
                        </span>
                        <span class="o_stat_text">Finished Product</span>
                    </div>
                </button>
            </div>
        </field>
    </record>
</odoo>
